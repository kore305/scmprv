{
  "manifest_version": 3,
  "name": "SafeCheck - Report a Scam",
  "version": "1.0",
  "description": "Quickly report scams directly from your browser.",
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
